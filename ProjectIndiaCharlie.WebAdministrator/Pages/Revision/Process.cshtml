@page
@model ProjectIndiaCharlie.WebAdministrator.Pages.Revision.ProcessModel
@{
}

<h3>Revision</h3>

<div>
    <h4>Cita</h4>
    <form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            ID de estudiante
        </dt>
            <dd input type="text" class="col-sm-10" asp-for="RevisionVM.PersonId">
            @Html.DisplayFor(modelItem => Model.UnresolverRevision.PersonId)
        </dd>
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10" asp-for="Model.UnresolverRevision.Student">
            @Html.DisplayFor(modelItem => Model.UnresolverRevision.Student)
        </dd>
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10" asp-for="Model.UnresolverRevision.Section">
            @Html.DisplayFor(modelItem => Model.UnresolverRevision.Section)
        </dd>
        <dt class="col-sm-2" hidden>
            Materia ID
        </dt>
        <dd class="col-sm-10" asp-for="RevisionVM.SubjectDetailId" hidden>
            @Html.DisplayFor(modelItem => Model.UnresolverRevision.SubjectDetailId)
        </dd>
        <dt class="col-sm-2">
            Nota Anterior
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.UnresolverRevision.Grade)
        </dd>            
    </dl>
        <div class="form-group row" style="margin-bottom:20px">
            <div class="col-2">
                <label asp-for="RevisionVM.ModifiedGrade"></label>
            </div>
            <div class="col-5">
                <input type="text" style="color:black !important" asp-for="RevisionVM.ModifiedGrade" class="form-control" />
            </div>
            <span class="text-danger col-5" asp-validation-for="RevisionVM.ModifiedGrade"></span>
        </div>

		<div class = "form-group row" style="margin-bottom:20px">			
			<div class = "col-2">
				<input type ="submit" class="btn-primary btn" value = "Processar Revision"/>
			</div>
		</div>
	</form>
   
</div>  



