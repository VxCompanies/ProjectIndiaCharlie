<UserControl x:Class="ProjectIndiaCharlie.Desktop.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectIndiaCharlie.Desktop.View"
             xmlns:vm="clr-namespace:ProjectIndiaCharlie.Desktop.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vm:HomeViewModel x:Key="vm"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource vm}">
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}"
                       FontSize="16"
                       FontWeight="Bold"/>
            <DataGrid ItemsSource="{Binding PeopleList}"
                      Height="300"/>
            <Button Content="Get People"
                    Command="{Binding GetPeopleAsyncCommand}"
                    CommandParameter="{Binding PeopleList}"/>
        </StackPanel>
    </Grid>
</UserControl>
